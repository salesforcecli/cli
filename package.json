{
  "name": "@salesforce/cli",
  "description": "The Salesforce CLI",
  "version": "1.8.0",
  "author": "Salesforce",
  "bin": {
    "sf": "./bin/run"
  },
  "homepage": "https://github.com/salesforcecli/cli",
  "bugs": "https://github.com/forcedotcom/cli/issues",
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "/bin",
    "/dist/**/*.js",
    "/oclif.manifest.json"
  ],
  "keywords": [
    "oclif",
    "salesforce",
    "sf"
  ],
  "license": "BSD-3-Clause",
  "main": "dist/index.js",
  "oclif": {
    "bin": "sf",
    "scope": "salesforce",
    "dirname": "sf",
    "topicSeparator": " ",
    "commands": "./dist/commands",
    "helpClass": "./dist/help/sfHelp.js",
    "plugins": [
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-help",
      "@oclif/plugin-not-found",
      "@oclif/plugin-plugins",
      "@oclif/plugin-update",
      "@oclif/plugin-version",
      "@sf/config",
      "@sf/deploy-retrieve",
      "@sf/drm",
      "@sf/env",
      "@sf/functions",
      "@sf/gen",
      "@sf/info",
      "@sf/login",
      "@salesforce/plugin-telemetry"
    ],
    "devPlugins": [
      "@oclif/plugin-command-snapshot",
      "@salesforce/plugin-release-management"
    ],
    "update": {
      "s3": {
        "bucket": "dfc-data-production",
        "indexVersionLimit": 20,
        "folder": "media/salesforce-cli/sf",
        "acl": " ",
        "host": "https://developer.salesforce.com"
      }
    },
    "info": {
      "releasenotes": {
        "distTagUrl": "https://registry.npmjs.org/-/package/@salesforce/cli/dist-tags",
        "releaseNotesPath": "https://github.com/forcedotcom/cli/tree/main/releasenotes/sf",
        "releaseNotesFilename": "README.md"
      }
    },
    "macos": {
      "identifier": "com.salesforce.cli"
    },
    "windows": {
      "name": "Salesforce CLI",
      "keypath": "/tmp/windows-signing.pfx"
    },
    "additionalVersionFlags": [
      "-v"
    ],
    "additionalHelpFlags": [
      "-h"
    ]
  },
  "dependencies": {
    "@oclif/core": "^1.1.1",
    "@oclif/plugin-autocomplete": "1.1.1",
    "@oclif/plugin-help": "5.1.10",
    "@oclif/plugin-not-found": "2.2.4",
    "@oclif/plugin-plugins": "2.0.12",
    "@oclif/plugin-update": "2.1.4",
    "@oclif/plugin-version": "1.0.4",
    "@salesforce/plugin-telemetry": "1.4.0",
    "@salesforce/sf-plugins-core": "1.0.5",
    "@sf/config": "npm:@salesforce/plugin-config@2.2.11",
    "@sf/deploy-retrieve": "npm:@salesforce/plugin-deploy-retrieve@1.0.5",
    "@sf/drm": "npm:@salesforce/plugin-deploy-retrieve-metadata@1.0.7",
    "@sf/env": "npm:@salesforce/plugin-env@1.0.3",
    "@sf/functions": "npm:@salesforce/plugin-functions@1.3.0",
    "@sf/gen": "npm:@salesforce/plugin-generate@1.0.5",
    "@sf/info": "npm:@salesforce/plugin-info@1.1.4",
    "@sf/login": "npm:@salesforce/plugin-login@1.0.6",
    "tslib": "^2.3.1"
  },
  "pinnedDependencies": [
    "@sf/config@sf",
    "@sf/deploy-retrieve",
    "@sf/drm",
    "@sf/env",
    "@sf/functions",
    "@sf/gen",
    "@sf/info",
    "@sf/login",
    "@salesforce/plugin-telemetry",
    "@oclif/plugin-autocomplete",
    "@oclif/plugin-help",
    "@oclif/plugin-not-found",
    "@oclif/plugin-plugins",
    "@oclif/plugin-update",
    "@oclif/plugin-version"
  ],
  "resolutions": {
    "@salesforce/templates": "52.7.0",
    "@oclif/config": "1.18.2",
    "@oclif/command": "1.8.16"
  },
  "repository": "salesforcecli/cli",
  "scripts": {
    "build": "sf-build",
    "channel:promote": "sf-release channel:promote",
    "clean-all": "sf-clean all",
    "clean": "sf-clean",
    "compile": "sf-compile",
    "docs": "sf-docs",
    "format": "sf-format",
    "lint": "eslint \"src/**/*.ts\"",
    "oclif-artifacts": "oclif manifest",
    "pack:deb": "oclif pack:deb",
    "pack:macos": "oclif pack:macos",
    "pack:tarballs": "oclif pack:tarballs",
    "pack:verify": "sf-release cli:tarballs:verify --cli sf --windows-username-buffer 36",
    "pack:win": "oclif pack:win",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "yarn test:deprecation-policy",
    "prepack": "sf-prepack",
    "prepare": "yarn compile && yarn lint",
    "pretarball": "sf-release cli:tarballs:prepare --types",
    "promote-dist-tags": "./scripts/promote-dist-tags",
    "promote:verify": "sf-release cli:versions:inspect --channels stable --locations archive --cli sf",
    "promote:verify-rc": "sf-release cli:versions:inspect --channels stable-rc --locations archive --cli sf",
    "test:smoke-unix": "sf-release cli:tarballs:smoke --cli sf",
    "test:deprecation-policy": "./bin/dev snapshot:compare",
    "test": "echo disable # sf-test",
    "upload:deb": "oclif upload:deb",
    "upload:macos": "oclif upload:macos",
    "upload:tarballs": "oclif upload:tarballs",
    "upload:win": "oclif upload:win",
    "version": "oclif readme"
  },
  "types": "dist/index.d.ts",
  "husky": {
    "hooks": {
      "commit-msg": "sf-husky-commit-msg",
      "pre-commit": "sf-husky-pre-commit",
      "pre-push": "sf-husky-pre-push"
    }
  },
  "devDependencies": {
    "@oclif/plugin-command-snapshot": "^3.1.2",
    "@oclif/test": "^1",
    "@salesforce/dev-config": "^2.1.2",
    "@salesforce/dev-scripts": "^0.9.18",
    "@salesforce/plugin-release-management": "^2.7.1",
    "@salesforce/prettier-config": "^0.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "aws-sdk": "^2.1001.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^3.1",
    "eslint-config-oclif-typescript": "^0.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-salesforce": "^0.1.6",
    "eslint-config-salesforce-license": "^0.1.6",
    "eslint-config-salesforce-typescript": "^0.2.8",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsdoc": "^35.5.1",
    "eslint-plugin-prettier": "^3.4.1",
    "globby": "^11.0.4",
    "husky": "^4.3.8",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "oclif": "^2.0.0-main.6",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "sinon": "^11.1.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
