{
  "name": "@salesforce/cli",
  "description": "The Salesforce CLI",
  "version": "1.55.0",
  "author": "Salesforce",
  "bin": {
    "sf": "./bin/run"
  },
  "homepage": "https://github.com/salesforcecli/cli",
  "bugs": "https://github.com/forcedotcom/cli/issues",
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.19",
  "files": [
    "/bin",
    "/dist/**/*.js",
    "/oclif.manifest.json",
    "/npm-shrinkwrap.json"
  ],
  "keywords": [
    "oclif",
    "salesforce",
    "sf"
  ],
  "license": "BSD-3-Clause",
  "main": "dist/index.js",
  "oclif": {
    "bin": "sf",
    "scope": "salesforce",
    "dirname": "sf",
    "topicSeparator": " ",
    "flexibleTaxonomy": true,
    "commands": "./dist/commands",
    "helpClass": "./dist/help/sfHelp.js",
    "plugins": [
      "@oclif/plugin-autocomplete",
      "@oclif/plugin-commands",
      "@oclif/plugin-help",
      "@oclif/plugin-not-found",
      "@oclif/plugin-plugins",
      "@oclif/plugin-search",
      "@oclif/plugin-update",
      "@oclif/plugin-version",
      "@oclif/plugin-which",
      "@sf/settings",
      "@sf/deploy-retrieve",
      "@sf/env",
      "@sf/functions",
      "@sf/gen",
      "@sf/info",
      "@sf/login",
      "@sf/sobject",
      "@sf/telemetry",
      "@sf/trust"
    ],
    "devPlugins": [
      "@oclif/plugin-command-snapshot",
      "@salesforce/plugin-release-management"
    ],
    "hooks": {
      "preupdate": "./dist/hooks/preupdate",
      "command_incomplete": "./dist/hooks/incomplete",
      "plugins:preinstall": "./dist/hooks/pluginsPreinstall.js"
    },
    "update": {
      "s3": {
        "bucket": "dfc-data-production",
        "indexVersionLimit": 20,
        "folder": "media/salesforce-cli/sf",
        "acl": " ",
        "host": "https://developer.salesforce.com"
      }
    },
    "info": {
      "releasenotes": {
        "distTagUrl": "https://registry.npmjs.org/-/package/@salesforce/cli/dist-tags",
        "releaseNotesPath": "https://github.com/forcedotcom/cli/tree/main/releasenotes/sf",
        "releaseNotesFilename": "README.md"
      }
    },
    "macos": {
      "identifier": "com.salesforce.cli"
    },
    "windows": {
      "name": "Salesforce CLI",
      "keypath": "/tmp/windows-signing.pfx"
    },
    "additionalVersionFlags": [
      "-v"
    ],
    "additionalHelpFlags": [
      "-h"
    ]
  },
  "dependencies": {
    "@oclif/core": "^1.20.0",
    "@oclif/plugin-autocomplete": "1.3.2",
    "@oclif/plugin-commands": "2.2.1",
    "@oclif/plugin-help": "5.1.16",
    "@oclif/plugin-not-found": "2.3.8",
    "@oclif/plugin-plugins": "2.1.7",
    "@oclif/plugin-search": "0.0.2",
    "@oclif/plugin-update": "3.0.6",
    "@oclif/plugin-version": "1.1.3",
    "@oclif/plugin-which": "^2.2.1",
    "@salesforce/core": "3.31.19",
    "@salesforce/sf-plugins-core": "^1.15.2",
    "@sf/deploy-retrieve": "npm:@salesforce/plugin-deploy-retrieve@1.6.12",
    "@sf/env": "npm:@salesforce/plugin-env@1.5.9",
    "@sf/functions": "npm:@salesforce/plugin-functions@1.14.4",
    "@sf/gen": "npm:@salesforce/plugin-generate@1.0.31",
    "@sf/info": "npm:@salesforce/plugin-info@2.2.8",
    "@sf/login": "npm:@salesforce/plugin-login@1.1.10",
    "@sf/settings": "npm:@salesforce/plugin-settings@1.1.8",
    "@sf/sobject": "npm:@salesforce/plugin-sobject@0.0.29",
    "@sf/telemetry": "npm:@salesforce/plugin-telemetry@2.0.4",
    "@sf/trust": "npm:@salesforce/plugin-trust@2.1.0",
    "semver": "^7.3.8",
    "tslib": "^2.4.0"
  },
  "pinnedDependencies": [
    "@salesforce/core",
    "@sf/settings",
    "@sf/deploy-retrieve",
    "@sf/env",
    "@sf/gen",
    "@sf/info",
    "@sf/login",
    "@sf/sobject",
    "@sf/telemetry",
    "@sf/trust"
  ],
  "resolutions": {
    "@oclif/core": "1.20.4",
    "@salesforce/schemas": "1.4.0",
    "@salesforce/sf-plugins-core": "1.17.6",
    "@salesforce/templates": "55.1.0"
  },
  "repository": "salesforcecli/cli",
  "scripts": {
    "build": "sf-build",
    "channel:promote": "sf-release channel:promote",
    "clean": "sf-clean",
    "clean-all": "sf-clean all",
    "compile": "sf-compile",
    "docs": "sf-docs",
    "format": "sf-format",
    "lint": "eslint \"src/**/*.ts\"",
    "oclif-artifacts": "oclif manifest",
    "pack:deb": "oclif pack:deb",
    "pack:macos": "oclif pack:macos",
    "pack:tarballs": "oclif pack:tarballs --xz --parallel",
    "pack:tarballs:sequential": "oclif pack:tarballs --xz",
    "pack:verify": "sf-release cli:tarballs:verify --cli sf --windows-username-buffer 34",
    "pack:win": "oclif pack:win",
    "postpack": "rm -f oclif.manifest.json npm-shrinkwrap.json",
    "posttest": "yarn test:deprecation-policy",
    "prepack": "sf-prepack",
    "prepare": "sf-install && yarn compile && yarn lint",
    "prepublishOnly": "npm shrinkwrap",
    "pretarball": "sf-release cli:tarballs:prepare --types",
    "pretest": "echo disable # sf-compile-test",
    "promote-dist-tags": "./scripts/promote-dist-tags",
    "promote:verify": "sf-release cli:versions:inspect --channels stable --locations archive --cli sf",
    "promote:verify-rc": "sf-release cli:versions:inspect --channels stable-rc --locations archive --cli sf",
    "test": "sf-test",
    "test:deprecation-policy": "./bin/dev snapshot:compare",
    "test:json-schema": "sf-release cli:schemas:compare",
    "test:smoke-unix": "sf-release cli:tarballs:smoke --cli sf",
    "upload:deb": "oclif upload:deb",
    "upload:macos": "oclif upload:macos",
    "upload:tarballs": "oclif upload:tarballs --xz",
    "upload:win": "oclif upload:win",
    "version": "oclif readme"
  },
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@oclif/plugin-command-snapshot": "^3.2.6",
    "@salesforce/dev-config": "^3.1.0",
    "@salesforce/dev-scripts": "^3.1.0",
    "@salesforce/plugin-release-management": "^3.5.17",
    "@salesforce/prettier-config": "^0.0.2",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.41.0",
    "aws-sdk": "^2.1249.0",
    "chai": "^4.3.7",
    "eslint": "^8.26.0",
    "eslint-config-oclif": "^3.1",
    "eslint-config-oclif-typescript": "^0.2.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-salesforce": "^1.1.0",
    "eslint-config-salesforce-license": "^0.1.6",
    "eslint-config-salesforce-typescript": "^1.1.1",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.6.2",
    "globby": "^11.1.0",
    "husky": "^7.0.4",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "oclif": "^3.2.25",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "sinon": "^11.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
