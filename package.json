{
  "name": "@salesforce/cli",
  "description": "The Salesforce CLI",
  "version": "0.0.35",
  "author": "Salesforce",
  "bin": {
    "sf": "./bin/run"
  },
  "homepage": "https://github.com/salesforcecli/cli",
  "bugs": "https://github.com/salesforcecli/cli/issues",
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "/bin",
    "/dist/**/*.js",
    "/oclif.manifest.json"
  ],
  "keywords": [
    "oclif",
    "salesforce",
    "sf"
  ],
  "license": "BSD-3-Clause",
  "main": "dist/index.js",
  "oclif": {
    "bin": "sf",
    "scope": "salesforce",
    "state": "beta",
    "topicSeparator": " ",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-not-found",
      "@oclif/plugin-plugins",
      "@sf/config",
      "@sf/env",
      "@sf/login",
      "@sf/deploy-retrieve",
      "@sf/dr-metadata",
      "@sf/telemetry"
    ],
    "devPlugins": [
      "@oclif/plugin-command-snapshot",
      "@salesforce/plugin-release-management"
    ],
    "update": {
      "s3": {
        "bucket": "dfc-data-production",
        "indexVersionLimit": 20,
        "folder": "media/salesforce-cli/sf",
        "acl": " ",
        "host": "https://developer.salesforce.com"
      }
    },
    "macos": {
      "identifier": "com.salesforce.cli"
    },
    "windows": {
      "name": "Salesforce CLI",
      "keypath": "/tmp/windows-signing.pfx"
    },
    "additionalVersionFlags": [
      "version",
      "-v"
    ],
    "additionalHelpFlags": [
      "-h"
    ]
  },
  "dependencies": {
    "@oclif/core": "^0.5.30",
    "@oclif/plugin-help": "^4.0.1",
    "@oclif/plugin-not-found": "^2.1.1",
    "@oclif/plugin-plugins": "^1.10.1",
    "@sf/config": "npm:@salesforce/plugin-config@2.1.1",
    "@sf/deploy-retrieve": "npm:@salesforce/plugin-deploy-retrieve@0.0.16",
    "@sf/dr-metadata": "npm:@salesforce/plugin-deploy-retrieve-metadata@0.0.20",
    "@sf/env": "npm:@salesforce/plugin-env@0.0.23",
    "@sf/login": "npm:@salesforce/plugin-login@0.0.16",
    "@sf/telemetry": "npm:@salesforce/plugin-telemetry@1.2.3",
    "tslib": "^2.3.0"
  },
  "pinnedDependencies": [
    "@sf/config@sf",
    "@sf/env",
    "@sf/login",
    "@sf/deploy-retrieve",
    "@sf/dr-metadata",
    "@sf/telemetry"
  ],
  "repository": "salesforcecli/cli",
  "scripts": {
    "build": "sf-build",
    "clean-all": "sf-clean all",
    "clean": "sf-clean",
    "compile": "sf-compile",
    "docs": "sf-docs",
    "format": "sf-format",
    "lint": "eslint \"src/**/*.ts\"",
    "oclif-artifacts": "oclif manifest",
    "pack:deb": "oclif pack:deb",
    "pack:macos": "oclif pack:macos",
    "pack:tarballs": "oclif pack:tarballs",
    "pack:verify": "./bin/dev cli:tarballs:verify --cli sf --windows-username-buffer 36",
    "pack:win": "oclif pack:win",
    "postpack": "rm -f oclif.manifest.json",
    "posttest": "yarn test:deprecation-policy",
    "prepack": "sf-prepack",
    "prepare": "yarn compile && yarn lint",
    "pretarball": "./bin/dev cli:tarballs:prepare --types",
    "promote": "oclif promote",
    "promote:verify": "./bin/dev cli:versions:inspect --channels stable --locations archive --cli sf",
    "test:smoke-unix": "./tmp/sf/bin/sf --version && ./tmp/sf/bin/sf help && ./tmp/sf/bin/sf plugins --core",
    "test:deprecation-policy": "./bin/dev snapshot:compare",
    "test": "echo disable # sf-test",
    "upload:deb": "oclif upload:deb",
    "upload:macos": "oclif upload:macos",
    "upload:tarballs": "oclif upload:tarballs",
    "upload:win": "oclif upload:win",
    "version": "oclif readme"
  },
  "types": "dist/index.d.ts",
  "husky": {
    "hooks": {
      "commit-msg": "sf-husky-commit-msg",
      "pre-commit": "sf-husky-pre-commit",
      "pre-push": "sf-husky-pre-push"
    }
  },
  "devDependencies": {
    "@oclif/plugin-command-snapshot": "^2.2.2",
    "@oclif/test": "^1",
    "@salesforce/dev-config": "^2.1.2",
    "@salesforce/dev-scripts": "^0.9.18",
    "@salesforce/plugin-release-management": "^2.0.0",
    "@salesforce/prettier-config": "^0.0.2",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "aws-sdk": "^2.920.0",
    "chai": "^4.3.4",
    "eslint": "^7.29.0",
    "eslint-config-oclif": "^3.1",
    "eslint-config-oclif-typescript": "^0.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-salesforce": "^0.1.6",
    "eslint-config-salesforce-license": "^0.1.6",
    "eslint-config-salesforce-typescript": "^0.2.7",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsdoc": "^35.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "globby": "^11.0.4",
    "husky": "^4.2.5",
    "mocha": "^9.0.1",
    "nyc": "^15.1.0",
    "oclif": "^2.0.0-main.1",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "sinon": "^11.1.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  }
}
